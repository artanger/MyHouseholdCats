@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-md-center ">
    <div class="col-md-6  ">
        <div class="card login-logout-tab ">
            <div class="card-header  ">
                <ul class="nav nav-tabs card-header-tabs" role="tablist">
                    <li class="nav-item ">
                        <a class="nav-link " @*data-toggle="tab"*@ id="nav-login-tab" aria-controls="nav-login" href='/Identity/Account/Login'>Sign In</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link  " @*data-toggle="tab"*@ id="nav-register-tab" aria-controls="nav-register" href='/Identity/Account/Register'>Sign Up</a>
                    </li>

                </ul>
            </div>
            <div class="card-content">
                <div class="row justify-content-md-center ">
                    <div class="col-md-8  ">
                        @RenderBody()
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>

@section Scripts{
   @RenderSection("Scripts", required: false)

<script>
    $(document).ready(function() {
     var $cardHeaderTabs = $(".nav.nav-tabs.card-header-tabs");
       if($cardHeaderTabs.length > 0) {
           var $accountWrapper = $(".row.account-wrapper");
           if($accountWrapper.length > 0) {
                var $activeTabId = $accountWrapper.attr("aria-labelledby");
                $cardHeaderTabs.find("anav-link").removeClass('active');
                $cardHeaderTabs.find("#" + $activeTabId).addClass("active");
           }
        }
    });
</script>
}
